@model IEnumerable<PlayersPage.Models.Player>

@{
    ViewBag.Title = "Index";
}
<div class="container">
    <h2>Dinamo Mesha</h2>
    <div class="row">
        <div class="col-md-4">
            <table class="table">
                <tr>
                    <th style="text-align: match-parent;">Player's Name</th>
                    <th></th>
                    <th></th>

                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Ajax.ActionLink(@Html.DisplayFor(modelItem => item.FirstName) + " " + @Html.DisplayFor(modelItem => item.LastName), "Details", new { id = item.Id }, new AjaxOptions() { UpdateTargetId = "PartialViewTarget", InsertionMode = InsertionMode.Replace })
                        </td>
                        <td>
                            @Ajax.ActionLink("Update", "Edit", new { id = item.Id }, new AjaxOptions() { UpdateTargetId = "PartialViewTarget", InsertionMode = InsertionMode.Replace }, new { @class = "btn btn-primary btn-sm" })
                            @Html.ActionLink("Delete", "Delete", new { Id = item.Id }, new { data_target = "#modal-container", data_toggle = "modal", @class = "btn btn-primary btn-sm" })
                        </td>
                    </tr>
                }

            </table>


            <p>
                @Ajax.ActionLink("New Player", "Create", null, new AjaxOptions() { UpdateTargetId = "PartialViewTarget", InsertionMode = InsertionMode.Replace }, new { @class = "btn btn-primary btn-sm" })

            </p>
        </div>

        <div class="col-md-8">
            <div id="PartialViewTarget">

            </div>
        </div>
    </div>
</div>
<div id="modal-container" class="modal fade hidden-print" tabindex="-1" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">

        </div>
    </div>
</div>




